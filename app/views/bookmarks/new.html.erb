<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new Bookmark</h1>
      <%= simple_form_for [@list, @bookmark] do |b| %>
        <%= b.input :comment %>
        <%= b.input :movie_id, collection: Movie.all %>
        <%= b.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
